{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Terry",
	"patterns": [
		{
			"include": "#keywords"
		},
		{
			"include": "#sizes"
		},
		{
			"include": "#operators"
		},
		{
			"include": "#registers"
		},
		{
			"include": "#labels"
		},
		{
			"include": "#ints"
		},
		{
			"include": "#comments"
		},
		{
			"include": "#variables"
		}
	],
	"repository": {
		"keywords": {
			"patterns": [{
				"name": "keyword.control.terry",
				"match": "\\b(store|load|call|goto)\\b"
			}]
		},
		"sizes": {
			"patterns": [{
				"name": "entity.name.type.terry",
				"match": "\\b(tryte|word|triple|const)\\b"
			}]
		},
		"operators": {
			"patterns": [{ 
				"name": "keyword.operator.terry",
				"match": "~|\\+|\\-|%|\\/|\\\\|\\*|\\||&|=|>|<|\\?|:|\\^"
				}]
		},
		"registers": {
			"patterns": [{
				"name": "constant.other.register.terry",
				"match": "\\b([1-3][a-i])|(9[a-c])\\b"
			}]
		},
		"labels": {
			"patterns": [{
				"name": "header",
				"match": "\\b[A-Z]([A-Za-z0-9_]*)\\b"
			}]
		},
		"ints": {
			"patterns": [{
				"name": "constant.numeric.terry",
				"match": "\\b[0-9]+\\b"
			},
			{
				"name": "constant.numeric.terry",
				"match": "\\b0t[0-2]+\\b"
			},
			{
				"name": "constant.numeric.terry",
				"match": "\\b0b[0-1N]+\\b"
			},
			{
				"name": "constant.numeric.terry",
				"match": "\\b0h[0-9A-Q]+\\b"
			}]
		},
		"comments": {
			"patterns": [{
				"name": "comment.line.terry",
				"match": "#.*$"
			}]
		},
		"variables": {
			"patterns": [{
				"name": "variable.name.terry",
				"match": "\\b[a-z_]+[a-z0-9_]*\\b"
			}]
		}
	},
	"scopeName": "source.terry"
}